{
    "service_name": "seo_affiliate",
    "version": "0.1.0",
    "capabilities": [
      {
        "method": "mcp.seo_aff.generate_site",
        "description": "Generate SEO-optimized static pages with affiliate links.",
        "params_schema": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "prefixItems": [
            {
              "type": "object",
              "properties": {
                "site_id":        { "type": "string", "description": "Folder name under /data/sites/<site_id>" },
                "keyword":        { "type": "string" },
                "affiliate_link": { "type": "string" },
                "n_articles":     { "type": "integer" },
                "lang":           { "type": "string" },
                "dry":            { "type": "boolean" }
              },
              "required": ["site_id","keyword","affiliate_link"]
            }
          ]
        },
        "result_schema": { "type": "object" }
      }
    ]
  }
  